<div class="check-block">
    <div class="restaurant-logo tac"><img src="/{{place.getWebPathThumb}}"></div>
    <h5 class="tac">{% trans %}cart.block.your_order{% endtrans %}</h5>
    {% for dish in list %}
        <div class="check-item">
            <div class="name">{{ dish.dishId.name }}</div>
            <div class="type">{{ dish.dishSizeId.unit.name }}</div>
            <div class="clearfix">
                <div class="count">{{ dish.quantity }} vnt.</div>
                <div class="sum">{{ dish.dishSizeId.price }} Lt</div>
            </div>
            {% if dish.options|length > 0 %}
                {% for option in dish.options %}
                    <div class="clearfix">
                        <div class="count">{{ option.dishOptionId.name }}</div>
                        <div class="sum">{{ option.dishOptionId.price }} Lt</div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    {% endfor %}
    <div class="check-bottom">
        <div class="delivery-price clearfix">
            <div class="fl">{% trans %}cart.block.delivery_price{% endtrans %}:</div>
            <div class="fr">{{ place.deliveryPrice }} Lt</div>
        </div>
        <div class="total-sum clearfix">
            <div class="fl">{% trans %}cart.block.total{% endtrans %}:</div>
            <div class="fr">65,98 Lt</div>
        </div>
    </div>
    <div class="delivery-time tac">{% trans %}cart.block.delivery_time{% endtrans %} {{ place.deliveryTime }}</div>
</div>
