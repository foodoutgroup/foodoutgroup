{% extends 'FoodAppBundle::layout.html.twig' %}


{% block body %}

    {% image '@FoodAppBundle/Resources/public/images/slide_dev.jpg' output='/images/slide_dev.jpg' %}
    <div style="width: 1300px; height: 480px;  margin-left: auto; margin-right: auto; background-image: url('{{ asset_url }}')">
        {% endimage %}
        <div style="text-align: center">
            {% image '@FoodAppBundle/Resources/public/images/location_title_dev.png' output='/images/location_title_dev.png' %}
            <img src="{{ asset_url }}" alt="" style="margin-top: 36px; margin-bottom: 50px;"/>
            {% endimage %}
            {% image '@FoodAppBundle/Resources/public/images/location_dev.png' output='/images/location_dev.png' %}
            <img src="{{ asset_url }}" alt="" />
            {% endimage %}
        </div>
    </div>

    <div class="col-xs-12 col-sm-10">
        <p class="pull-right visible-xs">
            <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
        </p>
        <div class="jumbotron">
            <h1>Jami. Skanu</h1>
            <p>Galima uzsisakyti maista :)</p>
        </div>
        <div class="row">
            {% for i in 0..10 %}
            <div class="col-6 col-sm-6 col-lg-4">
                <h2>Patiekalas</h2>
                <p>
                    {% image '@FoodAppBundle/Resources/public/images/test_img.jpg' output='/images/test_img.jpg' %}
                    <img src="{{ asset_url }}" alt="" style="width: 200px; border-radius: 30px;"/>
                    {% endimage %}
                <li>Mesyte</li><li>Suris</li><li>Petrushka</li> </p>
                <p><a class="btn btn-default" href="#" role="button">Placiau &raquo;</a></p>
            </div>
            {% endfor %}

        </div><!--/row-->
    </div><!--/span-->
{% endblock %}
