<script type="text/javascript">
    // Do the newsletter submit
    $(document).ready(function() {
        var tooltip = $('.newsletter-email').tooltip({
            position: {
                my: "center bottom-20",
                at: "center top"
            }
        });

        $('.newsletter-form').bind('submit', function(){
            function isEmailAddress(str) {
                if (typeof str == "undefined") {
                    str = '';
                }
                var pattern = /^(([^<>()\[\]\\."]+(\.[^<>()\[\]\\.@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;

                return str.match(pattern);
            }

            var emailField = $(this).find('.newsletter-email');
            var validationResult = isEmailAddress(emailField.val());

            // This is not email!
            if (!validationResult) {
                emailField.tooltip( "show" );
                return false;
            }

            emailField.tooltip( "hide" );
            return true;
        });
    });
</script>
