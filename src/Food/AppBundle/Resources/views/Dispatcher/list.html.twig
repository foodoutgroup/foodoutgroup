                {% set cityUnconfirmed = (cityOrderCollection[city.id].unconfirmed.deliver|length + cityOrderCollection[city.id].unconfirmed.selfdeliver|length + cityOrderCollection[city.id].unconfirmed.pickup|length) %}
                {% set cityNotFinished = (cityOrderCollection[city.id].not_finished.deliver|length + cityOrderCollection[city.id].not_finished.selfdeliver|length + cityOrderCollection[city.id].not_finished.pickup|length) %}
