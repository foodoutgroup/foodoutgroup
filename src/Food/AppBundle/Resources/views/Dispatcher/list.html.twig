{% extends 'SonataAdminBundle:CRUD:base_list.html.twig' %}

{% block actions %}{% endblock %}

{% block side_menu %}
    <ul class="breadcrumb">
        <li>
            <a href="{{ path('sonata_admin_dashboard') }}">{{ 'Dashboard'|trans({}, 'SonataAdminBundle') }}</a>
            <span class="divider">/</span>
        </li>
        <li class="active">{{ 'admin.dispatcher'|trans({}, 'SonataAdminBundle') }}</li>
    </ul>
{% endblock %}

{% block list_table %}
<div class="todo_nieks_nezino_klases">
    <div class="order_list_block">
        <table class="order_list">
            <tr>
                <th>{{ 'admin.dispatcher.order_id'|trans({}, 'SonataAdminBundle') }}</th>
                <th>{{ 'admin.dispatcher.order_date'|trans({}, 'SonataAdminBundle') }}</th>
                <th>{{ 'admin.dispatcher.comment'|trans({}, 'SonataAdminBundle') }}</th>
                <th>{{ 'admin.dispatcher.order_date'|trans({}, 'SonataAdminBundle') }}</th>
            </tr>
            {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.getOrderDate()|date("Y-m-d H:i:s") }}</td>
                <td>{{ order.comment }}</td>
            </tr>
            {% endfor %}
        </table>
    </div>
    <div class="drivers_list">
