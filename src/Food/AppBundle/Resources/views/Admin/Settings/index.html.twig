{% extends '@FoodApp/admin_layout.html.twig' %}

{% block title %}{% endblock %}

{% block sonata_admin_content %}
    <div class="container">
        <div class="col-lg-12">
            <div class="page-header">
                <h1>
                    {% trans %}Settings{% endtrans %}<small>{% trans %}Change base system settings{% endtrans %}</small>
                </h1>
            </div>
        </div>
    </div>
    {{ form_start(form) }}
        <div class="container">
            {% set currentGroup = null %}
            {% for element in form %}

                {% if element.vars.attr.group is defined %}
                    {% if not loop.first %}<hr/>{% endif %}
                    {% if element.vars.attr.group is not empty  %}
                        <h4>{{ element.vars.attr.group }}</h4>
                        <hr/>
                    {% endif %}
                    {% set currentGroup = null %}

                {% endif %}

                {#{{ dump(element.vars.attr) }}#}

                <div class="control-group has-error clearfix">
                    <div class="span2">
                        {{ form_label(element) }}
                    </div>
                    <div class="span6">
                        {{ form_widget(element) }}
                    </div>
                </div>
            {% endfor %}
        </div>
    {{ form_end(form) }}
{% endblock %}