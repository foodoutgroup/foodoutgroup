{% if success_messages is not empty %}
<script type="text/javascript">
    {% for message in success_messages %}
        $(document).ready(function() {
            var popover_container = $('.menu.top-menu');

            popover_container.attr('data-content', '{{ message }}')
                             .popover('show');

            setTimeout(function() { popover_container.popover('hide'); }, 30 * 1000);

            if (popover_container.attr('data-position-fix')) {
                $('.popover').css('left', popover_container.attr('data-position-fix') + 'px');
            }
        });
    {% endfor %}
</script>
{% endif %}
