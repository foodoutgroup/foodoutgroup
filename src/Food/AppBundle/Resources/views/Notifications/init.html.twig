{% if noty_success_message is not empty %}
    <script type="text/javascript">
        {% for message in noty_success_message %}
            $(document).ready(function() {
                var options = {
                    text: '{{ message }}',
                    timeout: 3000,
                    modal: true,
                    layout: 'center',
                    type: 'success'
                };
                var n = noty(options);
            });
        {% endfor %}
    </script>
{% endif %}
