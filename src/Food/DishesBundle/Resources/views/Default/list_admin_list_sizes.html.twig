{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field%}
    <table>
        {% for child in object.sizes %}
            <tr>
                <td style="padding: 1px;">{{ child.unit.name }}</td>
                <td style="padding: 1px;">{{ child.price }}</td>
            </tr>
            <Tr>
                <td colspan="2" style="padding: 1px;">{{ child.code }}</td>
            </Tr>
        {% endfor %}
    </table>
{% endblock %}