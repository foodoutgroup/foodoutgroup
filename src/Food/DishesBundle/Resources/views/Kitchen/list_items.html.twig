<div class="filters-list food-type-filters">
    <p class="kitchens-label">{% trans %}places.select_kitchen{% endtrans %}</p>
    <ul class="menu" aria-labelledby="dLabel">
        {% for item in list %}
            <li>
                <label class="custom-checkbox">{{ item.name }}<span class="count">{{ item.placeCount }}</span>
                    <input type="checkbox" name="kitchens[]" data-slug="{{ slug_util.slugByItem(item.id, 'kitchen') }}" data-name="{{ item.name }}" value="{{ item.id }}" {% if item.id in selected_kitchens %}checked="checked"{% endif %}>
                </label>
            </li>
        {% endfor %}
        <li>
            <a href="#" class="clear-filter-link">{% trans %}places.clear_filters{% endtrans %}</a>
        </li>
    </ul>
</div>