{% extends 'FoodAppBundle::layout.html.twig' %}


{% block body %}
    <div class="col-xs-12 col-sm-10">
        <div class="jumbotron">
            <h1>{{ kitchen.name }}</h1>
        </div>
        <div class="row">

            <ul class="list-inline">
                {% for place in kitchen.places %}
                    <li><a href="{{ path('food_slug', {'slug': slug_util.slugByItem(place.id, 'place') }) }}">{{ place.name }}</a></li>
                {% endfor %}
            </ul>
        </div><!--/row-->
    </div><!--/span-->
{% endblock %}
