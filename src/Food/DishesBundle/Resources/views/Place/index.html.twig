        <!-- Adform Tracking Code BEGIN -->
        <script type="text/javascript">
            var _adftrack = {
                pm: 314127,
                divider: encodeURIComponent('|'),
                pagename: encodeURIComponent('Foodout.lt|{% trans %}general.places{% endtrans %}|{{ place.name }}')
