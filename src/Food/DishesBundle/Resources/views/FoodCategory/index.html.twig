{% extends 'FoodAppBundle::layout.html.twig' %}

{% block body %}
    <div class="col-xs-12 col-sm-10">
        <div class="jumbotron">
            <h1>{{ place.name }}</h1>
            <ul class="list-inline">
                {% for category in place.categories %}
                    <li class="active"><a href="{{ path('food_slug', {'slug': slug_util.slugByItem(category.id, 'food_category') }) }}">{{ category.name }}</a></li>
                {% endfor %}
            </ul>
        </div>
        <div class="row">
            <h2>{{ category.name }}</h2>
            {% for dish in category.dishes %}
                <div class="col-6 col-sm-6 col-lg-4 dish">
                    <h2>{{ dish.name }}</h2>
                    <p>
                        <img src="/app_dev.php/images/test_img_test_img_1.jpg" alt="" style="width: 200px; border-radius: 30px;">
                    </p>
                    {{ dish.description }}
                    <p><a class="btn btn-default add-cart" href="#" role="button">Kalam i karta Â»</a></p>
                </div>
            {% endfor %}
        </div><!--/row-->
    </div><!--/span-->
{% endblock %}
