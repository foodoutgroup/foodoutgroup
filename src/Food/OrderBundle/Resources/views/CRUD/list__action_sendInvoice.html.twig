{% if is_granted('ROLE_SUPER_ADMIN') or is_granted('EDIT', admin) or is_granted('ROLE_DISPATCHER') %}
    <a class="btn btn-small" href="{{ admin.generateObjectUrl('sendInvoice', object) }}">
        <i class="icon-envelope"></i>
        {% if object.user is null or object.user.noInvoice %}
            {% trans from 'SonataAdminBundle' %}admin.order.generate_invoice{% endtrans %}
        {% else %}
            {% trans from 'SonataAdminBundle' %}admin.order.send_invoice{% endtrans %}
        {% endif %}
    </a>
{% endif %}
